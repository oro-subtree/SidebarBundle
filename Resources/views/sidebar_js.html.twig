</style>
<script type="text/javascript">
    require(['jquery', 'oro/sidebar/sidebar/model', 'oro/sidebar/sidebar/view', 'oro/sidebar/constants'],
            function($, SidebarModel, SidebarView, constants) {
        'use strict';

        $(function () {
            var leftSidebarData = $('#sidebar-left').data('models');
            var rightSidebarData = $('#sidebar-right').data('models');

            var leftSidebar = new SidebarModel(leftSidebarData.sidebar);
            leftSidebar.position = constants.SIDEBAR_LEFT;

            var rightSidebar = new SidebarModel(rightSidebarData.sidebar);
            rightSidebar.position = constants.SIDEBAR_RIGHT;

            var leftSidebarView = new SidebarView({
                model: leftSidebar,
                el: '#sidebar-left',
                $main: $('#main')
            });

            var rightSidebarView = new SidebarView({
                model: rightSidebar,
                el: '#sidebar-right',
                $main: $('#main')
            });

            leftSidebar.widgets.reset(leftSidebarData.widgets);
            rightSidebar.widgets.reset(rightSidebarData.widgets);
        });
    });
</script>