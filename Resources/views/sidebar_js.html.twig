<script type="text/javascript">
    require(['jquery', 'oro/model/sidebar', 'oro/view/sidebar', 'oro/constants'],
            function($, SidebarModel, SidebarView, Constants) {
        'use strict';

        $(function () {
            var leftSidebar = new SidebarModel(SIDEBARS_BOOTSTRAP.sidebars[0].sidebar, {
                position: Constants.SIDEBAR_LEFT
            });

            var rightSidebar = new SidebarModel(SIDEBARS_BOOTSTRAP.sidebars[1].sidebar, {
                position: Constants.SIDEBAR_RIGHT
            });

            var leftSidebarView = new SidebarView({
                model: leftSidebar,
                el: '#sidebar-left',
                $main: $('#main')
            });

            var rightSidebarView = new SidebarView({
                model: rightSidebar,
                el: '#sidebar-right',
                $main: $('#main')
            });

